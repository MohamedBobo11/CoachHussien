@model CoachHussien.MVC.Models.FoodCalculatorViewModel

@{
    ViewData["Title"] = "Food Calculator";
    Layout = null; // Using null layout to fully control the dark theme as per image, or I should integrate with existing layout? 
    // The user image shows a full dark screen. I'll assume a standalone look or override styles.
    // Better to use existing layout but add custom styles for this page.
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Food Calculator</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;900&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #FFD700; /* Gold/Yellow */
            --primary-hover: #e6c200;
            --bg-dark: #000000;
            --card-bg: #111111;
            --text-light: #ffffff;
            --text-dark: #000000;
            --text-muted: #888888;
            --border-color: #333333;
        }

        body {
            background-color: var(--bg-dark);
            color: var(--text-light);
            font-family: 'Cairo', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 20px;
            background-image: radial-gradient(circle at top right, #222 0%, #000 100%);
        }

        .container {
            max-width: 600px;
            width: 100%;
            background-color: var(--card-bg);
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 0 50px rgba(255, 215, 0, 0.1);
            border: 1px solid var(--border-color);
            position: relative;
            overflow: hidden;
        }
        
        /* Branding Section */
        .branding-header {
            text-align: center;
            margin-bottom: 30px;
            position: relative;
            z-index: 1;
        }
        
        .logo-img {
            max-width: 150px;
            width: 150px;
            height: 150px;
            margin: 0 auto 15px;
            border-radius: 50%;
            object-fit: cover;
            filter: drop-shadow(0 0 20px rgba(255,215,0,0.4));
        }
        
        .brand-name {
            font-size: 2.5rem;
            font-weight: 900;
            color: var(--text-light);
            margin: 0 0 5px 0;
            line-height: 1;
            text-transform: uppercase;
            letter-spacing: 2px;
        }
        
        .brand-subtitle {
            font-size: 1rem;
            color: var(--text-muted);
            letter-spacing: 3px;
            text-transform: uppercase;
            font-weight: 400;
        }

        h1 {
            text-align: center;
            color: var(--text-light);
            margin-bottom: 30px;
            font-weight: 700;
            font-size: 1.8rem;
            border-bottom: 2px solid var(--primary-color);
            display: inline-block;
            padding-bottom: 10px;
        }
        
        .page-title-container {
            text-align: center;
            margin-bottom: 30px;
        }

        .form-label {
            color: var(--primary-color);
            font-weight: 700;
            margin-bottom: 8px;
            font-size: 1rem;
        }

        /* Macro Buttons */
        .btn-macro {
            background-color: transparent;
            color: var(--text-muted);
            border: 2px solid var(--border-color);
            width: 100%;
            margin-bottom: 10px;
            padding: 12px;
            font-size: 1rem;
            font-weight: 700;
            transition: all 0.3s ease;
            border-radius: 12px;
            text-transform: uppercase;
        }

        .btn-macro:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
            background-color: rgba(255, 215, 0, 0.05);
        }

        .btn-macro.active {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
            color: var(--text-dark);
            box-shadow: 0 0 20px rgba(255, 215, 0, 0.4);
            transform: scale(1.02);
        }

        /* Inputs */
        .form-control {
            background-color: #1a1a1a;
            border: 1px solid var(--border-color);
            color: var(--text-light);
            padding: 12px;
            border-radius: 10px;
            height: 50px;
            font-weight: 600;
        }

        .form-control:focus {
            background-color: #222;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 2px rgba(255, 215, 0, 0.2);
            color: var(--text-light);
        }

        /* Choices.js Customization */
        .choices {
            margin-bottom: 0;
            color: var(--text-light);
        }
        
        .choices__inner {
            background-color: #1a1a1a !important;
            border: 1px solid var(--border-color) !important;
            border-radius: 10px !important;
            min-height: 50px;
            display: flex;
            align-items: center;
            padding: 5px 15px;
        }

        .choices.is-focused .choices__inner {
            border-color: var(--primary-color) !important;
            box-shadow: 0 0 0 2px rgba(255, 215, 0, 0.2);
        }

        .choices__input {
            background-color: transparent !important;
            color: var(--text-light) !important;
            margin-bottom: 0 !important;
        }
        
        .choices__input::placeholder {
            color: var(--text-muted) !important;
            opacity: 0.7;
        }

        .choices__list--dropdown, .choices__list[aria-expanded] {
            background-color: #1a1a1a !important;
            border: 1px solid var(--primary-color) !important;
            border-radius: 10px;
            margin-top: 5px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.8);
            color: var(--text-light) !important;
        }

        .choices__list--dropdown .choices__item {
            color: var(--text-light) !important;
            padding: 12px 15px;
            font-size: 0.95rem;
            border-bottom: 1px solid #333;
            background-color: #1a1a1a !important;
        }

        .choices__list--dropdown .choices__item--selectable.is-highlighted {
            background-color: var(--primary-color) !important;
            color: var(--text-dark) !important;
            font-weight: 700;
        }

        .choices__list--single {
            padding: 0;
            color: var(--text-light) !important;
            font-size: 1rem;
            font-weight: 600;
        }
        
        .choices__placeholder {
            color: var(--text-muted) !important;
            opacity: 0.7;
        }

        /* Calculate Button */
        .btn-calculate {
            background-color: var(--primary-color);
            color: var(--text-dark);
            width: 100%;
            padding: 15px;
            font-size: 1.2rem;
            font-weight: 900;
            margin-top: 30px;
            border: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            box-shadow: 0 5px 20px rgba(255, 215, 0, 0.3);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-calculate:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(255, 215, 0, 0.5);
            background-color: var(--primary-hover);
            color: var(--text-dark);
        }

        .btn-calculate:active {
            transform: translateY(0);
        }

        /* Result Table */
        .result-table {
            margin-top: 40px;
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            border-radius: 12px;
            overflow: hidden;
            border: 1px solid var(--border-color);
        }

        .result-table th, .result-table td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid var(--border-color);
        }

        .result-table th {
            background-color: var(--primary-color);
            color: var(--text-dark);
            font-weight: 800;
            font-size: 1rem;
            text-transform: uppercase;
        }

        .result-table td {
            background-color: #1a1a1a;
            color: var(--text-light);
            font-size: 1.1rem;
            font-weight: 600;
        }

        .result-table tr:last-child td {
            border-bottom: none;
        }

        .result-table tr:hover td {
            background-color: #222;
        }
        
        /* Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #111; 
        }
        ::-webkit-scrollbar-thumb {
            background: #333; 
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: var(--primary-color); 
        }
        
        /* Responsive Design */
        @@media (max-width: 768px) {
            body {
                padding: 10px;
            }
            
            .container {
                padding: 20px;
                border-radius: 15px;
            }
            
            .logo-img {
                max-width: 100px;
                width: 100px;
                height: 100px;
            }
            
            .brand-name {
                font-size: 1.8rem;
                letter-spacing: 1px;
            }
            
            .brand-subtitle {
                font-size: 0.85rem;
                letter-spacing: 2px;
            }
            
            h1 {
                font-size: 1.4rem;
            }
            
            .form-label {
                font-size: 0.95rem;
            }
            
            .btn-macro {
                padding: 10px;
                font-size: 0.9rem;
            }
            
            .form-control {
                height: 45px;
                font-size: 0.95rem;
            }
            
            .choices__inner {
                min-height: 45px;
            }
            
            .btn-calculate {
                padding: 12px;
                font-size: 1rem;
                margin-top: 20px;
            }
            
            .result-table th,
            .result-table td {
                padding: 10px 8px;
                font-size: 0.9rem;
            }
            
            .result-table th {
                font-size: 0.85rem;
            }
        }
        
        @@media (max-width: 480px) {
            .container {
                padding: 15px;
            }
            
            .logo-img {
                max-width: 80px;
                width: 80px;
                height: 80px;
            }
            
            .brand-name {
                font-size: 1.5rem;
            }
            
            .brand-subtitle {
                font-size: 0.75rem;
                letter-spacing: 1.5px;
            }
            
            h1 {
                font-size: 1.2rem;
                padding-bottom: 8px;
            }
            
            .page-title-container {
                margin-bottom: 20px;
            }
            
            .btn-macro {
                padding: 8px;
                font-size: 0.85rem;
                margin-bottom: 8px;
            }
            
            .form-control {
                height: 42px;
                font-size: 0.9rem;
                padding: 10px;
            }
            
            .choices__inner {
                min-height: 42px;
                padding: 5px 12px;
            }
            
            .choices__list--single {
                font-size: 0.9rem;
            }
            
            .btn-calculate {
                padding: 10px;
                font-size: 0.95rem;
                letter-spacing: 0.5px;
            }
            
            .result-table {
                margin-top: 30px;
            }
            
            .result-table th,
            .result-table td {
                padding: 8px 5px;
                font-size: 0.8rem;
            }
            
            .result-table th {
                font-size: 0.75rem;
            }
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="branding-header">
            <img src="/images/logo_icon.jpg" alt="Logo" class="logo-img" />
            <h2 class="brand-name">Hussein</h2>
            <div class="brand-subtitle">FITNESS COACH</div>
        </div>
        
        <div class="page-title-container">
            <h1>Food Calculator</h1>
        </div>

        <form method="post" asp-action="Index">
            <input type="hidden" asp-for="SelectedMacro" id="SelectedMacro" />

            <div class="d-grid gap-2 mb-3">
                <button type="button" class="btn btn-macro @(Model.SelectedMacro == "Protein" ? "active" : "")" onclick="setMacro('Protein')">Protein</button>
                <button type="button" class="btn btn-macro @(Model.SelectedMacro == "Carbohydrates" ? "active" : "")" onclick="setMacro('Carbohydrates')">Carbohydrates</button>
                <button type="button" class="btn btn-macro @(Model.SelectedMacro == "Fats" ? "active" : "")" onclick="setMacro('Fats')">Fats</button>
            </div>

            <div class="mb-3">
                <label class="form-label">اسم الطعام الأساسي:</label>
                <select asp-for="BaseFoodId" asp-items="Model.Foods" class="form-select" id="BaseFoodSelect">
                    <option value="">اختر الطعام</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">اسم الطعام البديل:</label>
                <select asp-for="AlternativeFoodId" asp-items="Model.Foods" class="form-select" id="AltFoodSelect">
                    <option value="">اختر الطعام</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">وزن الطعام:</label>
                <input asp-for="BaseWeight" class="form-control" placeholder="100" />
                <div class="text-white mt-1">جرام</div>
            </div>

            <button type="submit" class="btn btn-calculate">احسب</button>
        </form>

        @if (Model.ResultWeight.HasValue && Model.BaseFoodDetails != null && Model.AlternativeFoodDetails != null)
        {
            <table class="result-table">
                <thead>
                    <tr>
                        <th>العنصر الغذائي</th>
                        <th>الطعام الأساسي</th>
                        <th>الطعام البديل</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>الوزن (جرام)</td>
                        <td>@Model.BaseWeight.ToString("0.00")</td>
                        <td>@Model.ResultWeight.Value.ToString("0.00")</td>
                    </tr>
                    <tr>
                        <td>السعرات الحرارية</td>
                        <td>@((Model.BaseWeight * Model.BaseFoodDetails.Calories / 100).ToString("0.00"))</td>
                        <td>@((Model.ResultWeight.Value * Model.AlternativeFoodDetails.Calories / 100).ToString("0.00"))</td>
                    </tr>
                    <tr>
                        <td>البروتين</td>
                        <td>@((Model.BaseWeight * Model.BaseFoodDetails.Protein / 100).ToString("0.00"))</td>
                        <td>@((Model.ResultWeight.Value * Model.AlternativeFoodDetails.Protein / 100).ToString("0.00"))</td>
                    </tr>
                     <tr>
                        <td>الكربوهيدرات</td>
                        <td>@((Model.BaseWeight * Model.BaseFoodDetails.Carbs / 100).ToString("0.00"))</td>
                        <td>@((Model.ResultWeight.Value * Model.AlternativeFoodDetails.Carbs / 100).ToString("0.00"))</td>
                    </tr>
                     <tr>
                        <td>الدهون</td>
                        <td>@((Model.BaseWeight * Model.BaseFoodDetails.Fat / 100).ToString("0.00"))</td>
                        <td>@((Model.ResultWeight.Value * Model.AlternativeFoodDetails.Fat / 100).ToString("0.00"))</td>
                    </tr>
                </tbody>
            </table>
        }
        
        <div asp-validation-summary="All" class="text-danger mt-3"></div>
    </div>

    <script>
        let baseFoodChoices, altFoodChoices;

        document.addEventListener('DOMContentLoaded', function() {
            const options = {
                searchEnabled: true,
                itemSelectText: '',
                noResultsText: 'لا توجد نتائج',
                noChoicesText: 'لا توجد خيارات',
                placeholder: true,
                placeholderValue: 'اختر الطعام',
                shouldSort: false, // Already sorted from server
            };

            baseFoodChoices = new Choices('#BaseFoodSelect', options);
            altFoodChoices = new Choices('#AltFoodSelect', options);
        });

        async function setMacro(macro) {
            document.getElementById('SelectedMacro').value = macro;
            
            // Update button styles
            document.querySelectorAll('.btn-macro').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            // Clear previous selections immediately
            if(baseFoodChoices) baseFoodChoices.removeActiveItems();
            if(altFoodChoices) altFoodChoices.removeActiveItems();

            // Fetch foods
            let categoryId = 1;
            if (macro === 'Carbohydrates') categoryId = 2;
            if (macro === 'Fats') categoryId = 3;

            try {
                const response = await fetch(`/FoodCalculator/GetFoodsByCategory?categoryId=${categoryId}`);
                const foods = await response.json();
                
                updateChoices(baseFoodChoices, foods);
                updateChoices(altFoodChoices, foods);
            } catch (error) {
                console.error('Error fetching foods:', error);
            }
        }

        function updateChoices(choicesInstance, foods) {
            choicesInstance.clearChoices();
            choicesInstance.setChoices(
                foods.map(food => ({
                    value: food.id,
                    label: food.name,
                    selected: false,
                    disabled: false,
                })),
                'value',
                'label',
                true
            );
        }
    </script>
</body>
</html>
