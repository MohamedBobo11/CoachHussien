    <div class="container">
        <div class="branding-header">
            <img src="/images/logo_icon.jpg" alt="Logo" class="logo-img" />
            <h2 class="brand-name">Hussein</h2>
            <div class="brand-subtitle">FITNESS COACH</div>
        </div>
        
        <div class="page-title-container">
            <h1>Food Calculator</h1>
        </div>

        <form method="post" asp-action="Index">
            <input type="hidden" asp-for="SelectedMacro" id="SelectedMacro" />

            <div class="d-grid gap-2 mb-3">
                <button type="button" class="btn btn-macro @(Model.SelectedMacro == "Protein" ? "active" : "")" onclick="setMacro('Protein')">Protein</button>
                <button type="button" class="btn btn-macro @(Model.SelectedMacro == "Carbohydrates" ? "active" : "")" onclick="setMacro('Carbohydrates')">Carbohydrates</button>
                <button type="button" class="btn btn-macro @(Model.SelectedMacro == "Fats" ? "active" : "")" onclick="setMacro('Fats')">Fats</button>
            </div>

            <div class="mb-3">
                <label class="form-label">اسم الطعام الأساسي:</label>
                <select asp-for="BaseFoodId" asp-items="Model.Foods" class="form-select" id="BaseFoodSelect">
                    <option value="">اختر الطعام</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">اسم الطعام البديل:</label>
                <select asp-for="AlternativeFoodId" asp-items="Model.Foods" class="form-select" id="AltFoodSelect">
                    <option value="">اختر الطعام</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">وزن الطعام:</label>
                <input asp-for="BaseWeight" class="form-control" placeholder="0.00" />
                <div class="text-white mt-1">جرام</div>
            </div>

            <button type="submit" class="btn btn-calculate">احسب</button>
        </form>

        @if (Model.ResultWeight.HasValue && Model.BaseFoodDetails != null && Model.AlternativeFoodDetails != null)
        {
            <table class="result-table">
                <thead>
                    <tr>
                        <th>العنصر الغذائي</th>
                        <th>الطعام الأساسي</th>
                        <th>الطعام البديل</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>الوزن (جرام)</td>
                        <td>@Model.BaseWeight.Value.ToString("0.00")</td>
                        <td>@Model.ResultWeight.Value.ToString("0.00")</td>
                    </tr>
                    <tr>
                        <td>السعرات الحرارية</td>
                        <td>@((Model.BaseWeight.Value * Model.BaseFoodDetails.Calories / 100).ToString("0.00"))</td>
                        <td>@((Model.ResultWeight.Value * Model.AlternativeFoodDetails.Calories / 100).ToString("0.00"))</td>
                    </tr>
                    <tr>
                        <td>البروتين</td>
                        <td>@((Model.BaseWeight.Value * Model.BaseFoodDetails.Protein / 100).ToString("0.00"))</td>
                        <td>@((Model.ResultWeight.Value * Model.AlternativeFoodDetails.Protein / 100).ToString("0.00"))</td>
                    </tr>
                     <tr>
                        <td>الكربوهيدرات</td>
                        <td>@((Model.BaseWeight.Value * Model.BaseFoodDetails.Carbs / 100).ToString("0.00"))</td>
                        <td>@((Model.ResultWeight.Value * Model.AlternativeFoodDetails.Carbs / 100).ToString("0.00"))</td>
                    </tr>
                     <tr>
                        <td>الدهون</td>
                        <td>@((Model.BaseWeight.Value * Model.BaseFoodDetails.Fat / 100).ToString("0.00"))</td>
                        <td>@((Model.ResultWeight.Value * Model.AlternativeFoodDetails.Fat / 100).ToString("0.00"))</td>
                    </tr>
                </tbody>
            </table>
        }
        
